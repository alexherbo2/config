#
# bspwm hotkeys
#

#Quit
super + alt + Escape 
	bspc quit


super + {1,2,3,4}
	bspc desktop -f ^{1,2,3,4}

#Close
super + w
	bspc node -c

#Toggle floating or fullscreen state for that node
super + {s,f,t}
	bspc node -t ~{floating,fullscreen,tiled}

#Focus in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

#Go to next or previous desktop
super + {comma, period}
	bspc desktop -f {prev,next}

#Send node to next or previous desktop
super + shift + {comma, period}
	bspc node -d {prev,next}

#
# wm independent hotkeys
#

ctrl + alt + t 
	kitty

ctrl + alt + w
	firefox

XF86MonBrightness{Up,Down}
    backlight {+,-}5%

XF86Audio{Lower,Raise}Volume
	pamixer {-d,-i} 3

XF86AudioMute
	pamixer --toggle-mute

XF86TouchpadToggle
	synclient TouchpadOff=(synclient -l | grep -c 'TouchpadOff.*=.*0')
